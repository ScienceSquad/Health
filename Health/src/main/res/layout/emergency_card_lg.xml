<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#d32f2f">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/frameLayout"
        android:foreground="@drawable/ic_alert"
        android:layout_marginRight="12dp"
        android:foregroundTint="#ffffff">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_toEndOf="@+id/frameLayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="EMERGENCY NOTIFICATION"
            android:id="@+id/emc_title_lg"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. This is actually a really big deal. You should be concerned. "
            android:id="@+id/emc_content_lg"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textAlignment="inherit"
            android:singleLine="false"
            android:layout_below="@+id/emc_title_lg"/>
    </RelativeLayout>

</RelativeLayout>