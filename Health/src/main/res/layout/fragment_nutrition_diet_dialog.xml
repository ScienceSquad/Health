<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/dialog_layout_root_diet">

    <TextView
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:text="      Favorite Food List"
        android:id="@+id/textView2"
        android:layout_weight="0.08" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/diet_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/max_nutrition_log_height"/>

    <EditText
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:hint="Insert New Food here"
        android:id="@+id/new_food" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Food"
        android:id="@+id/add_food_button"
        android:layout_weight="0.08" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Reminders"
        android:id="@+id/reminders"
        android:layout_weight="0.08" />

</LinearLayout>