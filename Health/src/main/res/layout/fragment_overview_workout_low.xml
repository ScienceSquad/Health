<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Workout Overview"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Low workout activity along with low activity in general. Perhaps you got behind on some work and have not been able to find the time to workout. Maybe it's time to reevaluate your workout routine."
        android:id="@+id/nutrition_overview"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Small" >
    </TextView>
</LinearLayout>