<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sciencesquad.health" >

    <!-- For the Steps Module  -->
    <uses-feature android:name="android.hardware.sensor.stepcounter" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- For SoundService to play audio with the screen off. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Restricts app to phone-use only; no tablets -->
    <compatible-screens>
        <!-- all small size screens -->
        <screen android:screenSize="small" android:screenDensity="ldpi" />
        <screen android:screenSize="small" android:screenDensity="mdpi" />
        <screen android:screenSize="small" android:screenDensity="hdpi" />
        <screen android:screenSize="small" android:screenDensity="xhdpi" />
        <screen android:screenSize="small" android:screenDensity="xxhdpi" />
        <screen android:screenSize="small" android:screenDensity="xxxhdpi" />
        <!-- all normal size screens -->
        <screen android:screenSize="normal" android:screenDensity="ldpi" />
        <screen android:screenSize="normal" android:screenDensity="mdpi" />
        <screen android:screenSize="normal" android:screenDensity="hdpi" />
        <screen android:screenSize="normal" android:screenDensity="xhdpi" />
        <screen android:screenSize="normal" android:screenDensity="xxhdpi" />
        <screen android:screenSize="normal" android:screenDensity="xxxhdpi" />
    </compatible-screens>

    <application
        android:name=".events.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:backupAgent=".data.RealmBackupAgent"
        android:fullBackupOnly="true"
        android:fullBackupContent="true" >

        <!-- For Google's AutoBackupAgent. -->
        <meta-data android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIH0mZXy_cfYTsA7ZYW8iO-x0b-h2_k3SLBDx7Dg" />

        <!-- Entry point for the application. -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" >

            <!-- Can be started from any launcher application. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/.
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- For Maps testing. -->
        <activity
            android:name=".activity.MapsActivity"
            android:label="@string/title_activity_maps"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- For Clock testing. -->
        <activity
            android:name=".ClockActivity"
            android:label="@string/title_activity_clock"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- For Steps testing. -->
        <activity
            android:name=".steps.StepsViewModel"
            android:label="@string/steps_module"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- For Workout testing. -->
        <activity
            android:name=".workout.WorkoutActivity"
            android:label="@string/workout_module"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- For Alarm testing. -->
        <activity
            android:name=".alarm.AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- For SleepModule to play audio in the background. -->
        <service
            android:name=".sleep.SoundService"
            android:exported="false"/>

        <receiver android:enabled="true"
            android:name=".prescriptions.PrescriptionAlarmReceiver">
        </receiver>
    </application>
</manifest>