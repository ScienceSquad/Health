<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".sleep.SleepFragment">
    <data>
        <variable name="fragment" type="com.sciencesquad.health.sleep.SleepFragment"/>
        <variable name="module" type="com.sciencesquad.health.sleep.SleepModule"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionGroup="true"
            android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:navigationIcon="@drawable/ic_menu"
                    app:title="Sleep"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?colorPrimary" >
            <RelativeLayout
                    android:id="@+id/page1"
                    android:tag="Thing 1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/a"
                        android:text="Hi!"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="56sp"
                        android:singleLine="true"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/black"
                        android:shadowColor="@android:color/black"
                        android:minHeight="38sp"
                        android:shadowDy="1"
                        android:shadowRadius="1" />
                <TextView
                        android:text="Tap to begin using app >"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textStyle="normal"
                        android:textAllCaps="true"
                        android:shadowColor="@android:color/black"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/black"
                        android:minHeight="12sp" />
            </RelativeLayout>
            <GridLayout
                    android:id="@+id/page2"
                    android:tag="Ambience"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:alignmentMode="alignBounds"
                    android:columnCount="2"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true">
                <android.support.v7.widget.CardView
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile1">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile one"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile2">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile two"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="0"
                        android:layout_row="2"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile3">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile three"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="0"
                        android:layout_row="3"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile4">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile four"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile5">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile five"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile6">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile six"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile7">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile seven"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_column="1"
                        android:layout_row="3"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:gravity="center"

                        android:foreground="?attr/selectableItemBackground"
                        android:stateListAnimator="@anim/lift_on_touch"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"

                        app:cardBackgroundColor="?colorPrimaryDark"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp"
                        android:id="@+id/tile8">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="tile eight"/>
                </android.support.v7.widget.CardView>
            </GridLayout>
        </android.support.v4.view.ViewPager>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_menu_sleep" />
    </android.support.design.widget.CoordinatorLayout>
</layout>