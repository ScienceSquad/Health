<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Sleep Overview"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Your sleep score looks great! We base this score off of the PSQI - Pittsburgh Sleep Quality Index - through analyzing your sleep data and providing you with feedback. You have had a very healthy sleep schedule lately!"
        android:id="@+id/nutrition_overview"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Small" >
    </TextView>
</LinearLayout>